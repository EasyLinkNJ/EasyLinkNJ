<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_click_white"
    android:paddingBottom="14dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="14dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:text="收  货  人："
        android:textColor="@color/black_trans87"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tvName"
        android:text="13934676203"
        android:textColor="@color/black_trans87"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2dp"
        android:text="收货地址："
        android:textColor="@color/black_trans87"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvAddressTitle"
        android:layout_toRightOf="@id/tvAddressTitle"
        android:lineSpacingExtra="2dp"
        android:text="山西省临汾市区山西省临汾市区山西省临汾市区山西省临汾市区山西省临汾市区山西省临汾市区"
        android:textColor="@color/black_trans87"
        android:textSize="13dp" />
</RelativeLayout>