<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_click_white"
    android:paddingBottom="14dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="14dp">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingRight="20dp"
        android:singleLine="true"
        android:textColor="@color/black_trans87"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:paddingRight="25dp"
        android:singleLine="true"
        android:textColor="@color/black_trans87"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPhone"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2dp"
        android:text="收货地址："
        android:textColor="@color/black_trans87"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvAddressTitle"
        android:layout_toRightOf="@id/tvAddressTitle"
        android:lineSpacingExtra="2dp"
        android:paddingRight="16dp"
        android:textColor="@color/black_trans87"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_arrow_right_gray" />
</RelativeLayout>