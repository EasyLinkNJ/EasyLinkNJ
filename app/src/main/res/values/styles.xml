<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="app_theme" parent="@style/ex_theme">
        <item name="exTitleAndroidStyle">true</item>
        <item name="exTitleHeight">@dimen/easy_title_bar_height</item>
        <item name="exTitleNone">false</item>
        <item name="exTitleFloat">false</item>
        <item name="exTitleFloatContentTopMargin">0dp</item>
        <item name="exTitleTextSize">@dimen/easy_text_title_bar</item>
        <item name="exTitleTextBold">true</item>
        <item name="exTitleMainTextSize">@dimen/easy_text_title_main</item>
        <item name="exTitleSubTextSize">@dimen/easy_text_title_sub</item>
        <item name="exTitleClickerBackground">@drawable/selector_bg_click_cover</item>
        <item name="exTitleClickerTextSize">@null</item>
        <item name="exTitleClickerHoriPadding">16dp</item>
        <item name="android:windowBackground">@color/bg_app_main</item>

        <item name="exTitleBackIcon">@mipmap/ic_back_white</item>
        <item name="exTitleTextColor">@color/white_trans87</item>
        <item name="exTitleBackground">@color/bg_title_bar</item>
        <item name="exBackground">@color/bg_app_main</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/bg_status_bar</item>
        <item name="android:colorEdgeEffect" tools:targetApi="21">@color/bg_title_bar</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">false</item>
    </style>

    <style name="app_theme_main" parent="app_theme">
        <item name="exTitleBackIcon">@null</item>
    </style>

    <style name="ex_theme_dialog" parent="@style/ex_theme">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <!-- 对话框样式，带白色圆角背景 -->
    <style name="qa_ex_theme_dialog" parent="@style/ex_theme_dialog">
        <item name="android:windowBackground">@mipmap/bg_card_item_round</item>
    </style>
</resources>
