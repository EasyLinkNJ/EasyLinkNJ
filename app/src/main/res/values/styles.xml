<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="app_theme" parent="@style/ex_theme">
        <item name="exTitleAndroidStyle">true</item>
        <item name="exTitleHeight">@dimen/easy_title_bar_height</item>
        <item name="exTitleNone">false</item>
        <item name="exTitleFloat">false</item>
        <item name="exTitleFloatContentTopMargin">0dp</item>
        <item name="exTitleTextSize">@dimen/easy_text_title_bar</item>
        <item name="exTitleTextBold">true</item>
        <item name="exTitleMainTextSize">@dimen/easy_text_title_main</item>
        <item name="exTitleSubTextSize">@dimen/easy_text_title_sub</item>
        <item name="exTitleClickerBackground">@drawable/selector_bg_click_cover</item>
        <item name="exTitleClickerTextSize">@null</item>
        <item name="exTitleClickerHoriPadding">16dp</item>

        <item name="exTitleBackIcon">@mipmap/ic_back_white</item>
        <item name="exTitleTextColor">@android:color/white</item>
        <item name="exTitleBackground">@color/bg_title_bar</item>
        <item name="exBackground">@android:color/white</item>
        <item tools:targetApi="21" name="android:statusBarColor">@color/bg_status_bar</item>
    </style>

    <style name="app_theme_main" parent="app_theme">
        <item name="exTitleBackIcon">@null</item>
    </style>
